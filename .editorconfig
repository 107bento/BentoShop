# EditorConfig http://EditorConfig.org
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.js]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
indent_style = space
indent_size = 2
quote_type = single
spaces_around_operators = true

[*.{html,liquid}]
indent_style = space
indent_size = 2
quote_type = double

[*.css]
indent_style = space
indent_size = 2
quote_type = double

[*.{json,yaml}]
indent_style = space
indent_size = 4
quote_type = double

